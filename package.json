{
  "name": "hooks-project",
  "version": "3.0.0",
  "private": true,
  "scripts": {
    "build": "preconstruct build && pnpm format-dist",
    "dev": "preconstruct dev",
    "watch": "preconstruct watch",
    "test": "jest --passWithNoTests",
    "ci": "pnpm dev && jest --coverage --ci",
    "format": "pretty-quick",
    "format-dist": "prettier packages/**/dist/**/*.js --write --loglevel=error",
    "publish-local": "lerna exec yalc publish",
    "push-local": "lerna exec yalc push",
    "publish-release": "pnpm build && changeset publish",
    "publish-next": "pnpm build && lerna publish --dist-tag=next",
    "postinstall": "patch-package",
    "prepare": "husky install"
  },
  "dependencies": {
    "@babel/core": "7.19.3",
    "@babel/preset-env": "7.19.3",
    "@babel/preset-typescript": "7.18.6",
    "@changesets/cli": "2.25.2",
    "@jest/expect": "28.1.3",
    "@preconstruct/cli": "2.2.2",
    "all-contributors-cli": "6.24.0",
    "consola": "^2.15.3",
    "execa": "4.1.0",
    "globby": "^13.1.2",
    "husky": "7.0.4",
    "jest": "28.1.3",
    "jest-serializer-path": "0.1.15",
    "jest-snapshot-serializer-raw": "1.2.0",
    "jest-watch-typeahead": "1.1.0",
    "lerna": "^6.0.1",
    "patch-package": "6.4.7",
    "prettier": "2.8.1",
    "pretty-quick": "3.1.3",
    "typescript": "4.8.4",
    "yalc": "1.0.0-pre.53"
  },
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@types/babel__core": "7.1.20",
    "@types/babel__preset-env": "7.9.2",
    "@types/dedent": "^0.7.0",
    "@types/jest": "28.1.8",
    "@types/prettier": "2.7.1"
  }
}
