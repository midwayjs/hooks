{
  "name": "midway-hooks",
  "version": "2.0.0",
  "description": "Midway Hooks - 更快的一体化应用交付方案",
  "main": "index.js",
  "author": "Lxxyx <lxxyxzj@gmail.com>",
  "homepage": "https://github.com/midwayjs/hooks",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:midwayjs/hooks.git"
  },
  "private": true,
  "scripts": {
    "build": "preconstruct build",
    "dev": "preconstruct dev",
    "test": "jest --passWithNoTests",
    "cov": "yarn test --coverage",
    "ci": "yarn cov --ci",
    "format": "pretty-quick",
    "postinstall": "preconstruct dev",
    "publish-local": "lerna exec yalc publish",
    "publish-release": "yarn build && lerna publish",
    "publish-next": "yarn build && lerna publish --dist-tag=next"
  },
  "dependencies": {
    "@babel/core": "^7.14.0",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-optional-chaining": "^7.14.2",
    "@babel/plugin-proposal-private-methods": "^7.13.0",
    "@babel/preset-env": "^7.14.1",
    "@babel/preset-typescript": "^7.13.0",
    "@preconstruct/cli": "^2.1.0",
    "codecov": "^3.8.2",
    "esbuild": "^0.9.7",
    "esbuild-jest": "^0.5.0",
    "execa": "^4.0.3",
    "husky": "^4.2.3",
    "jest": "^26.6.3",
    "jest-serializer-path": "^0.1.15",
    "jest-snapshot-serializer-raw": "^1.2.0",
    "jest-watch-typeahead": "^0.6.3",
    "lerna": "latest",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4",
    "yalc": "^1.0.0-pre.50"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  }
}
